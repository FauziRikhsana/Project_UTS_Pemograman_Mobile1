<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/latar">

    <ImageView
        android:layout_width="177dp"
        android:layout_height="190dp"
        android:src="@drawable/logo"
        android:id="@+id/L_logo_1"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/gambar1"
        android:layout_below="@id/L_logo_1"
        android:layout_centerHorizontal="true"
        android:id="@+id/L_img_1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Project Fauzi"
        android:layout_below="@id/L_img_1"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:id="@+id/L_txt_1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fauzi RIkhshana-23552011030"
        android:layout_below="@id/L_txt_1"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:id="@+id/L_txt_2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/L_txt_2"
        android:layout_centerHorizontal="true"
        android:width="300dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:text="Login"
        android:background="@drawable/button_shape"
        android:id="@+id/L_btn_1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/L_btn_1"
        android:layout_centerHorizontal="true"
        android:width="300dp"
        android:background="@drawable/button_shape"
        android:layout_marginTop="20dp"
        android:text="Register"
        android:textColor="@color/white"
        android:id="@+id/R_btn"/>


</RelativeLayout>